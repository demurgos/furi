{
  "name": "furi",
  "version": "0.1.0",
  "description": "File URI library",
  "private": true,
  "main": "dist/lib/index",
  "types": "dist/lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/demurgos/furi"
  },
  "scripts": {
    "prepare": "gulp all:tsconfig.json && gulp :tslint.json && gulp lib:dist",
    "pretest": "gulp :lint && gulp lib:build",
    "test": "gulp test",
    "prepublishOnly": "npm test",
    "lint": "gulp :lint:fix"
  },
  "keywords": [
    "error"
  ],
  "pre-commit": {
    "run": [
      "test"
    ]
  },
  "author": "Charles Samborski <demurgos@demurgos.net> (https://demurgos.net)",
  "license": "MIT",
  "dependencies": {
    "@types/is-windows": "^0.2.0",
    "is-windows": "^1.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.12.0",
    "@types/tmp": "^0.0.33",
    "chai": "^4.1.2",
    "codecov": "^3.0.1",
    "esm": "^3.0.30",
    "gulp": "^4.0.0",
    "gulp-cli": "^2.0.1",
    "minimist": "^1.2.0",
    "pre-commit": "^1.2.2",
    "tmp": "^0.0.33",
    "ts-node": "^6.0.3",
    "turbo-gulp": "^0.17.1",
    "typescript": "^2.8.3"
  },
  "nyc": {
    "include": [
      "build/test/lib/**/*.js",
      "build/test/lib/**/*.mjs"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "extension": [
      ".mjs"
    ]
  }
}
