{
  "name": "furi",
  "version": "2.0.0",
  "description": "File URI manipulation library",
  "private": true,
  "main": "dist/lib/index",
  "types": "dist/lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/demurgos/furi"
  },
  "scripts": {
    "build": "gulp lib:build",
    "watch": "gulp lib:watch",
    "test": "gulp test",
    "lint": "gulp lint",
    "format": "gulp format",
    "typedoc": "gulp lib:typedoc",
    "dist": "gulp lib:dist",
    "prepare": "gulp all:tsconfig.json && gulp tslint.json && gulp dist",
    "pretest": "gulp lint",
    "prepublishOnly": "echo \"Use \\`gulp lib:publish\\`\" && exit 1"
  },
  "pre-commit": {
    "run": [
      "lint"
    ]
  },
  "keywords": [
    "file",
    "url"
  ],
  "author": "Charles Samborski <demurgos@demurgos.net> (https://demurgos.net)",
  "license": "MIT",
  "dependencies": {
    "@types/is-windows": "^1.0.0",
    "is-windows": "^1.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/gulp": "^4.0.6",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.5.0",
    "@types/tmp": "^0.1.0",
    "chai": "^4.2.0",
    "codecov": "^3.6.2",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.2.0",
    "minimist": "^1.2.6",
    "pre-commit": "^1.2.2",
    "tmp": "^0.1.0",
    "ts-node": "^8.6.2",
    "turbo-gulp": "^0.21.1",
    "typescript": "^3.7.5"
  },
  "c88": {
    "match": [
      "build/test/lib/*.{js,mjs}",
      "build/test/lib/**/*.{js,mjs}"
    ]
  }
}
