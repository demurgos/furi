{
  "name": "furi",
  "version": "1.0.0",
  "description": "File URI manipulation library",
  "private": true,
  "main": "dist/lib/index",
  "types": "dist/lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/demurgos/furi"
  },
  "scripts": {
    "prepare": "gulp all:tsconfig.json && gulp :tslint.json && gulp lib:dist",
    "prepublishOnly": "npm test",
    "pretest": "gulp :lint && gulp lib:build",
    "test": "gulp test",
    "lint": "gulp :lint:fix",
    "pre-commit": "gulp :lint && gulp test:build && gulp test:run:esm"
  },
  "pre-commit": {
    "run": [
      "pre-commit"
    ]
  },
  "keywords": [
    "file",
    "url"
  ],
  "author": "Charles Samborski <demurgos@demurgos.net> (https://demurgos.net)",
  "license": "MIT",
  "dependencies": {
    "@types/is-windows": "^0.2.0",
    "is-windows": "^1.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/gulp": "^4.0.5",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "@types/tmp": "^0.0.33",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "esm": "^3.0.84",
    "gulp": "^4.0.0",
    "gulp-cli": "^2.0.1",
    "minimist": "^1.2.0",
    "pre-commit": "^1.2.2",
    "tmp": "^0.0.33",
    "ts-node": "^7.0.1",
    "turbo-gulp": "^0.18.0",
    "typescript": "^3.2.1"
  },
  "c88": {
    "match": [
      "build/test/lib/*.{js,mjs}",
      "build/test/lib/**/*.{js,mjs}"
    ]
  }
}
